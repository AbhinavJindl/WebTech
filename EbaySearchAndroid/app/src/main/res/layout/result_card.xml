<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@color/purple"/>

        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_below="@id/product_image"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_marginTop="3dp"/>

        <LinearLayout
            android:id="@+id/product_first_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_title"
            android:orientation="horizontal"
            android:paddingLeft="2dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/product_zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zip: 900**"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/product_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:textColor="@color/gray"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/wishlistIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/cart_plus"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_first_info"
            android:orientation="horizontal"
            android:paddingLeft="2dp">
            <TextView
                android:id="@+id/product_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="condition"
                android:layout_gravity="center"
                android:textColor="@color/gray"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:text="dollars"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
